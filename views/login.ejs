<%- include('partiallink/header'); -%>
<%- include('partiallink/animatedbg'); -%>
<div class="login-container">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas"></i>  Login</h1>
      <%- include('partials/messages'); -%>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login <i class="fas fa-long-arrow-alt-right"></i></button>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
        Admin? <a href="/admin">Admin</a>
        
      </p>
    </div>
  </div>
</div>
